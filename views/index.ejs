<!-- Главная страница -->
<section class="hero">
  <div class="hero-content">
    <div class="hero-text">
      <% if (account) { %>
        <h1>Welcome back, <%= account.firstname %>!</h1>
        <p>Explore your account and exclusive member options.</p>
        <div class="hero-buttons">
          <a href="/account/manage" class="btn secondary">My Account</a>
        </div>
      <% } else { %>
        <h1>Welcome to <span class="highlight">CSE Motors</span></h1>
        <p>Your trusted dealership with the best deals.</p>
        <div class="hero-buttons">
          <a href="/account/login" class="btn">Login</a>
          <a href="/account/register" class="btn secondary">Register</a>
        </div>
      <% } %>
    </div>

    <div class="hero-image">
      <img src="/images/hero-car.jpg" alt="CSE Motors Showroom">
    </div>
  </div>
</section>

<!-- Contact Section -->
<section class="contact-section">
  <h2>Contact Us</h2>
  <p>Have questions or feedback? Send us a message — we’d love to hear from you.</p>

  <form action="/contact/add" method="POST" class="contact-form">
    <div class="form-group">
      <label for="name">Name:</label>
      <input type="text" id="name" name="name" required />
    </div>

    <div class="form-group">
      <label for="email">Email:</label>
      <input type="email" id="email" name="email" required />
    </div>

    <div class="form-group">
      <label for="message">Message:</label>
      <textarea id="message" name="message" rows="4" required></textarea>
    </div>

    <button type="submit" class="btn">Send Message</button>
  </form>
</section>
