<!-- üåü Hero Section -->
<section class="hero">
  <div class="hero-content">
    <div class="hero-text">
      <% if (account) { %>
        <h1>Welcome back, <%= account.firstname %>!</h1>
        <p>Explore our latest cars and exclusive deals available only for members.</p>
        <div class="hero-buttons">
          <a href="/inv" class="btn">View Inventory</a>
          <a href="/accounts/manage" class="btn secondary">My Account</a>
        </div>
      <% } else { %>
        <h1>Welcome to <span class="highlight">CSE Motors</span></h1>
        <p>Your trusted dealership with the best deals on new and used cars.</p>
        <div class="hero-buttons">
          <a href="/accounts/login" class="btn">Login</a>
          <a href="/accounts/register" class="btn secondary">Register</a>
        </div>
      <% } %>
    </div>
    <div class="hero-image">
      <img src="/images/hero-car.jpg" alt="CSE Motors Showroom">
    </div>
  </div>
</section>

