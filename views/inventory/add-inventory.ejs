<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title><%= title %></title>
</head>
<body>
  <h1>Add New Inventory Item</h1>

  <% if (message && message.length > 0) { %>
    <p><%= message %></p>
  <% } %>

  <form action="/inv/add-inventory" method="POST">
    <input type="text" name="inv_make" required placeholder="Make" value="<%= formData?.inv_make || '' %>">
    <input type="text" name="inv_model" required placeholder="Model" value="<%= formData?.inv_model || '' %>">
    <input type="number" name="inv_year" required placeholder="Year" value="<%= formData?.inv_year || '' %>">
    <input type="number" name="inv_price" step="0.01" required placeholder="Price" value="<%= formData?.inv_price || '' %>">
    <select name="classification_id" required>
      <% classifications.forEach(c => { %>
        <option value="<%= c.classification_id %>"><%= c.classification_name %></option>
      <% }) %>
    </select>
    <button type="submit">Add Vehicle</button>
  </form>
</body>
</html>
