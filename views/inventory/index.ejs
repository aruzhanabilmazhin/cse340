<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title><%= title %></title>
  <link rel="stylesheet" href="/css/style.css">
</head>
<body>
  <header>
    <h1>Inventory Management</h1>
    <div class="actions">
      <a href="/inv/add-classification"><button>Add Classification</button></a>
      <a href="/inv/add-inventory"><button>Add Inventory</button></a>
    </div>
  </header>

  <% if (message && message.length > 0) { %>
    <div class="flash-messages">
      <p><%= message %></p>
    </div>
  <% } %>

  <main>
    <h2>Vehicles</h2>
    <% if (inventory.length === 0) { %>
      <p>No vehicles added yet.</p>
    <% } else { %>
      <table border="1">
        <thead>
          <tr>
            <th>ID</th>
            <th>Make</th>
            <th>Model</th>
            <th>Year</th>
            <th>Price</th>
            <th>Classification</th>
          </tr>
        </thead>
        <tbody>
          <% inventory.forEach(vehicle => { %>
            <tr>
              <td><%= vehicle.id %></td>
              <td><%= vehicle.make %></td>
              <td><%= vehicle.model %></td>
              <td><%= vehicle.year %></td>
              <td><%= vehicle.price %></td>
              <td><%= classifications.find(c => c.classification_id == vehicle.classification_id)?.classification_name %></td>
            </tr>
          <% }) %>
        </tbody>
      </table>
    <% } %>
  </main>
</body>
</html>
