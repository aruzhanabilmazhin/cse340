<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title><%= title %></title>
  <link rel="stylesheet" href="/css/style.css">
</head>
<body>
  <header>
    <h1>Inventory Management</h1>
    <% if (message && message.length > 0) { %>
      <div class="flash-messages">
        <p><%= message %></p>
      </div>
    <% } %>
    <nav>
      <a href="/inv/add-classification">Add Classification</a> |
      <a href="/inv/add-inventory">Add Inventory</a>
    </nav>
  </header>

  <main>
    <table border="1">
      <thead>
        <tr>
          <th>ID</th>
          <th>Make</th>
          <th>Model</th>
          <th>Year</th>
          <th>Price</th>
          <th>Classification</th>
        </tr>
      </thead>
      <tbody>
        <% inventory.forEach(vehicle => { %>
          <tr>
            <td><%= vehicle.inv_id %></td>
            <td><a href="/inv/detail/<%= vehicle.inv_id %>"><%= vehicle.inv_make %></a></td>
            <td><%= vehicle.inv_model %></td>
            <td><%= vehicle.inv_year %></td>
            <td>$<%= vehicle.inv_price %></td>
            <td><%= classifications.find(c => c.classification_id == vehicle.classification_id)?.classification_name %></td>
          </tr>
        <% }) %>
      </tbody>
    </table>
  </main>
</body>
</html>
